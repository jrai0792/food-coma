<main class="signup-container">
  <div class="form-container">
    <div class="signup-heading">
      <h1>Login!</h1>
    </div>
    <div class="field">
      <%= form_tag '/login' do |f|%>
      <div class="field">
      Email: <%= email_field_tag :email, "", class: "signup-field"%>
      </div>
      <%= submit_tag "Login" , class: "button"%>
      <%end%>
    </div>
  </div>
</main>