<h1>Article Show page</h1>
<h3><%= @article.title %></h3>
<p><%= @article.body %></p>
<img src="<%=@article.image%>", height="40%" width="40%">
<p>Author : <%= @author.name %></p>
<% if !@article.voted?(current_user)%>
  <%= button_to "Vote", vote_path(@article), method: "put",disabled: true %>
<% else %>
  <%= button_to "Vote", vote_path(@article), method: "put" %>
<% end %>
